<% layout(`layouts/boilerplate`) %>
	<div class="row">
		<div class="col-12">
			<h1 class="text-center mb-3">
				Add New Property
			</h1>
		</div>
	</div>
	<div class="row">
		<div class="col-md-12">
			<form action="/properties/add/" method="post">
				<div class="row">
					<div class="col-md-8">
						<div class="form-group">
							<label class="mb-1" for="title">Title</label>
							<input class="form-control mb-3" type="text" name="title" id="title"
								placeholder="eg: 3BHK in Deansgate">
						</div>
					</div>
					<div class="col-md-4">
						<div class="form-group">
							<label class="mb-1" for="rent">Rent</label>
							<input class="form-control mb-3" type="number" name="rent" id="rent"
								placeholder="eg: 2" min="0" max="100000" step="5">
						</div>
					</div>
				</div>
				<div class="row">
					<div class="col-md-4 mb-3">
						<div class="form-group">
							<label class="mb-1" for="property-type">Type</label>
							<select class="form-control" name="type" id="property-type">
								<option value="house ">House </option>
								<option value="flat">Flat</option>
								<option value="apartment">Apartment</option>
								<option value="bungalow">Bungalow</option>
							</select>
						</div>
					</div>
					<div class="col-md-4">
						<div class="form-group">
							<label class="mb-1" for="bathrooms">Bathrooms</label>
							<input class="form-control mb-3" type="number" name="bathrooms" id="bathrooms" placeholder="eg: 2"
								min="0" max="25">
						</div>
					</div>
					<div class="col-md-4">
						<div class="form-group">
							<label class="mb-1" for="bedrooms">Bedrooms</label>
							<input class="form-control mb-3" type="number" name="bedrooms" id="bedrooms" placeholder="eg: 4"
								min="0" max="25">
						</div>
					</div>
				</div>
				<div class="row">
					<div class="col-md-6 mb-3">
						<div class="form-group">
							<label class="mb-1" for="area">Area</label>
							<input class="form-control mb-3" type="text" name="area" id="area"
								placeholder="eg: Deansgate">
						</div>
					</div>
					<div class="col-md-6 mb-3">
						<div class="form-group">
							<label class="mb-1" for="postcode">Postcode</label>
							<input class="form-control mb-3" type="text" name="postcode" id="postcode"
								placeholder="eg: M1 1QD">
						</div>
					</div>
				</div>
				<div class="form-group">
					<label class="mb-1" for="features">Features</label>
					<div class="row">
						<div class="col-md-6">
							<input class="form-control mb-3" type="text" name="features" id="features"
								placeholder="eg: Close to train station">
							<input class="form-control mb-3" type="text" name="features" id="features"
								placeholder="eg: Inbuilt home appliances">
							<input class="form-control mb-3" type="text" name="features" id="features"
								placeholder="eg: Guaranteed car park">
						</div>
						<div class="col-md-6">
							<input class="form-control mb-3" type="text" name="features" id="features"
								placeholder="eg: 24/7 concierge service">
							<input class="form-control mb-3" type="text" name="features" id="features"
								placeholder="eg: Private entrance available">
							<input class="form-control mb-3" type="text" name="features" id="features"
								placeholder="eg: Common pool and game area">
						</div>
					</div>
				</div>
				<div class="form-group">
					<label class="mb-1" for="description">Description</label>
					<textarea class="form-control" name="description" id="description" rows="5"></textarea>
				</div>
				<div class="py-2">
					<a class="btn btn-success" type="submit">Add</a>
					<a class="btn btn-danger" href="/properties/">Cancel</a>
				</div>
			</form>
		</div>
	</div>
